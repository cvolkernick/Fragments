<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragBlue"
        android:name="com.example.admin.fragments.fragments.BlueFragment" />

    <Button
        android:text="Add Blue"
        android:id="@+id/btnAddBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAddingFragments"/>

    <Button
        android:text="Add Red"
        android:id="@+id/btnAddRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAddingFragments"/>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/flHolder1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/flHolder2" />

</LinearLayout>